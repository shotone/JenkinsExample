pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Build') {
            steps{
                echo 'Committed successfully'
                sh '/opt/node-v12.16.1-linux-x64/bin/npm install'
            }

        }
        stage('Results'){
            steps{
                sh 'name=${PWD##*/}'
                sh 'sudo zip -r /home/"${PWD##*/}".zip $(pwd)'

                sh 'sudo cd .. ; rm -rf $name'
            }

        }

    }
}
